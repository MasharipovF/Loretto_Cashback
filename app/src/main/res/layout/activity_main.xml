            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnStatisticsB2B"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_columnWeight="1"
